<h1>Articles</h1>

<% if @articles.any? %>
  <ul>
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article %>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_article_path(article) if article.user == current_user %>
          <%= button_to  'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } if article.user == current_user %>
          <%= button_to 'Report', report_article_path(article), method: :post, data: { confirm: 'Are you sure you want to report this article?' } %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No articles found.</p>
<% end %>

<%= link_to "New Article", new_article_path if user_signed_in? %>

